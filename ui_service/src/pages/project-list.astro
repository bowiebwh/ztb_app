
---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CommonHeader from '@/components/common/CommonHeader.vue'
import CommonFooter from '@/components/common/CommonFooter.vue'
import ProjectListHeader from '@/components/project-list/ProjectListHeader.vue'
import ProjectListTable from '@/components/project-list/ProjectListTable.vue'
---

<BaseLayout title="项目列表 - 智标助手">
  <div class="flex flex-col min-h-screen bg-background">
    <CommonHeader client:load />
    
    <main class="flex-1 container mx-auto px-4 py-8">
      <ProjectListHeader client:load />
      <ProjectListTable client:load />
    </main>
    
    <CommonFooter client:load variant="simple" />
  </div>
</BaseLayout>
