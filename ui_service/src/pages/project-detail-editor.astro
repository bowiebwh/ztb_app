
---
import BaseLayout from '@/layouts/BaseLayout.astro'
import CommonHeader from '@/components/common/CommonHeader.vue'
import ProjectDetailEditor from '@/components/project-detail-editor/ProjectDetailEditor.vue'
---

<BaseLayout title="项目详情编辑 - 智标助手">
  <CommonHeader 
    client:load
    breadcrumbs={[
      { label: '项目列表', href: './project-list.html' },
      { label: '项目详情编辑' }
    ]}
  />
  
  <div class="flex min-h-[calc(100vh-64px)] bg-background">
    <!-- Left spacer sidebar (half width of original) -->
    <aside class="hidden md:block w-56 flex-shrink-0" aria-hidden="true" />

    <main class="flex-1 flex flex-col min-h-[calc(100vh-64px)]">
      <ProjectDetailEditor client:load />
    </main>

    <!-- Right spacer sidebar (half width of original) -->
    <aside class="hidden md:block w-56 flex-shrink-0" aria-hidden="true" />
  </div>
</BaseLayout>
